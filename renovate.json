{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":enableVulnerabilityAlertsWithLabel(security)",
    "mergeConfidence:all-badges"
  ],
  "enabledManagers": [
    "argocd",
    "kubernetes"
  ],
  "argocd": {
    "managerFilePatterns": [
      "^(.*\\/)?kustomization\\.yaml$"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "^.*deployment\\.yaml$",
      "^.*cronjob\\.yaml$"
    ]
  }
}
